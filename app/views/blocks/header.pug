// header -> header-top -> header-concent -> header-bottom -> responsive -> menu JavaScript -> Slick slider 
// header: tiêu đề, Slick slider: thanh trượt
header.header 
	.container 
		.header-top   
			a.header-logo(href="index.html") PTN
			i.fa.fa-bars.header-toggle 
			ul.header-menu
				+menuLink("About")
				+menuLink("Service")
				+menuLink("Work")
				+menuLink("Blog")
				li.header-menu-item
					a.header-menu-link(href="#") Contact 
				li.header-menu-item 
					a.header-menu-icon(href="#")   
						i.fa.fa-shopping-cart
				li.header-menu-item 
					a.header-menu-icon(href="#")   
						i.fa.fa-search
		.header-content
			h2.header-content-caption Creative Template
			h1.header-content-main Welcome to PTN
			a.header-content-more(href="#") Learn more
		.header-bottom
			+headerBottomItem("01","intro")
			+headerBottomItem("02","work")
			+headerBottomItem("03","about")
			.header-bottom-item
				span.header-bottom-number 04
				span.header-bottom-text contacts 